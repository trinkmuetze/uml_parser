  <!-- TYPES -->
  <xs:simpleType name="relation">
    <xs:restriction base="xs:string">
      <xs:enumeration value="import"/>
      <xs:enumeration value="access"/>
      <xs:enumeration value="merge"/>
    </xs:restriction>
  </xs:simpleType>

